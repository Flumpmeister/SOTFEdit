<mah:MetroWindow x:Class="SOTFEdit.View.SettingsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:viewModel="clr-namespace:SOTFEdit.ViewModel"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:st="http://schemas.spicytaco.io/"
                 mc:Ignorable="d"
                 Title="Settings" MinWidth="400"
                 WindowStartupLocation="CenterOwner"
                 WindowTransitionsEnabled="False"
                 ResizeMode="NoResize"
                 SizeToContent="WidthAndHeight"
                 PreviewKeyDown="SettingsDialog_OnPreviewKeyDown"
                 ShowMaxRestoreButton="False"
                 IsMaxRestoreButtonEnabled="False"
                 ShowMinButton="False"
                 IsMinButtonEnabled="False"
                 d:DataContext="{d:DesignInstance viewModel:SettingsDialogViewModel}"
                 TitleCharacterCasing="Normal">
    <Window.Resources>

        <Style x:Key="AccentColorMenuItemStyle"
               BasedOn="{StaticResource MahApps.Styles.ComboBoxItem}"
               TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Content" Value="{Binding Name, Mode=OneWay}" />
            <Setter Property="Background" Value="{Binding ColorBrush, Mode=OneWay}" />
        </Style>
    </Window.Resources>
    <st:AutoGrid Columns="Auto,*" ChildMargin="3" Margin="15">
        <Label>Theme</Label>
        <ComboBox ItemsSource="{Binding AccentColors, Mode=OneTime}"
                  ItemContainerStyle="{StaticResource AccentColorMenuItemStyle}"
                  SelectedItem="{Binding CurrentThemeAccent, Mode=TwoWay}" />
        <Label>Backup Mode</Label>
        <ComboBox ItemsSource="{Binding BackupModes, Mode=OneTime}" IsSynchronizedWithCurrentItem="True"
                  SelectedItem="{Binding CurrentBackupMode}" DisplayMemberPath="Name" />
        <Label />
        <CheckBox Content="Ask for backups every time" IsChecked="{Binding AskForBackups}" />
        <Label>File Mode</Label>
        <StackPanel Orientation="Horizontal">
            <RadioButton GroupName="BackupFileFlags" Margin="0 0 8 0" IsChecked="{Binding BackupFileTypeSingle}">One backup per changed JSON File</RadioButton>
            <RadioButton GroupName="BackupFileFlags" IsChecked="{Binding BackupFileTypeArchive}">ZIP Archive</RadioButton>
        </StackPanel>
        <Button Grid.ColumnSpan="2" Content="Save" Margin="0 10 0 0"
                Background="{DynamicResource MahApps.Brushes.Accent}" Command="{Binding SaveCommand}" />
    </st:AutoGrid>
</mah:MetroWindow>