<mah:MetroWindow x:Class="SOTFEdit.View.ShowImageWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:zoomControl="clr-namespace:ZoomControl;assembly=ZoomControl"
                 xmlns:viewModel="clr-namespace:SOTFEdit.ViewModel"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance viewModel:ShowImageWindowViewModel}"
                 TitleCharacterCasing="Normal"
                 Title="{Binding Title}" Height="450" Width="400">
    <zoomControl:ZoomControl Mode="Fill" AnimationLength="0">
        <Image Source="{Binding Url, IsAsync=True}" />
    </zoomControl:ZoomControl>
</mah:MetroWindow>